{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
        "import/prefer-default-export": "off",
        "no-console": "off",
        "no-alert": "off",
        "max-len":[
            "error",
            {
                "ignoreComments": true
            }
        ]
    }
}
